<%= form_with(model: property, local: true) do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
        <% property.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, '物件名'%>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :price, '賃料'%>
    <%= form.number_field :price %>円
  </div>

  <div class="field">
    <%= form.label :address, '住所' %>
    <%= form.text_area :address %>
  </div>

  <div class="field">
    <%= form.label :age, '築年数' %>
    <%= form.number_field :age %>年
  </div>

  <div class="field">
    <%= form.label :memo, '備考' %>
    <%= form.text_area :memo %>
  </div>

  <hr>

  <%= form.fields_for :stations do |stations_form| %>
    <h3>
      最寄り駅
      <%= stations_form.index+1 %>
    </h3>

    <div class="field">
      <%= stations_form.label :route, '路線名'%>
      <%= stations_form.text_field :route %>
    </div>

    <div class="field">
      <%= stations_form.label :station_name, '駅名'%>
      <%= stations_form.text_field :station_name %>
    </div>

    <div class="field">
      <%= stations_form.label :time, '徒歩分数'%>
      <%= stations_form.number_field :time %>分
    </div>
  <% end %>
  <div class="actions">
    <%= form.submit '登録する' %>
  </div>
<% end %>
